    <!-- CRITICAL: INITIALIZATION SCRIPT -->
    <script>
        let allArticles = [];
        let currentFilter = 'all';

        document.addEventListener('DOMContentLoaded', function() {
            if (window.updateUserInterface) {
                window.updateUserInterface();
            }
            
            loadArticles();

            // Setup filter buttons
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    currentFilter = this.dataset.category;
                    filterArticles();
                });
            });

            // Setup search
            document.getElementById('searchInput').addEventListener('input', function(e) {
                searchArticles(e.target.value);
            });
        });

        async function loadArticles() {
            try {
                if (!window.dcfSupabase) {
                    throw new Error('Supabase client not initialized');
                }

                const { data, error } = await window.dcfSupabase
                    .from('blog_posts')
                    .select(`
                        *,
                        blogs (
                            name,
                            slug
                        )
                    `)
                    .eq('status', 'published')
                    .order('created_at', { ascending: false });

                if (error) throw error;

                allArticles = data;
                console.log(`‚úÖ Loaded ${allArticles.length} articles`);
                renderArticles(allArticles);

            } catch (error) {
                console.error('Error loading articles:', error);
                document.getElementById('articlesGrid').innerHTML = `
                    <div class="empty-state">
                        <h3>Unable to load articles</h3>
                        <p>Please try refreshing the page</p>
                    </div>
                `;
            }
        }

        function renderArticles(articles) {
            const grid = document.getElementById('articlesGrid');
            
            if (articles.length === 0) {
                grid.innerHTML = `
                    <div class="empty-state">
                        <h3>No articles found</h3>
                        <p>Try adjusting your filters or search</p>
                    </div>
                `;
                return;
            }

            grid.innerHTML = articles.map(article => {
                const blogSlug = article.blogs?.slug || 'uncategorized';
                const blogName = article.blogs?.name || 'Blog';
                const url = `../blog/${blogSlug}/${article.slug}.html`;
                const date = new Date(article.created_at).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                });

                return `
                    <div class="article-card" onclick="window.location.href='${url}'">
                        <div class="article-meta">
                            <span class="meta-badge">${blogName}</span>
                        </div>
                        <h2 class="article-title">${article.title}</h2>
                        <p class="article-excerpt">${article.excerpt || 'Read more about this topic...'}</p>
                        <div class="article-footer">
                            <span class="article-date">${date}</span>
                            <span class="article-read-time">üìñ ${article.read_time || '5'} min read</span>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function filterArticles() {
            if (currentFilter === 'all') {
                renderArticles(allArticles);
            } else {
                const filtered = allArticles.filter(article => {
                    return article.blogs?.slug === currentFilter;
                });
                renderArticles(filtered);
            }
        }

        function searchArticles(query) {
            if (!query.trim()) {
                filterArticles();
                return;
            }

            const searchTerm = query.toLowerCase();
            const filtered = allArticles.filter(article => {
                return article.title.toLowerCase().includes(searchTerm) ||
                       (article.excerpt && article.excerpt.toLowerCase().includes(searchTerm)) ||
                       (article.blogs?.name && article.blogs.name.toLowerCase().includes(searchTerm));
            });

            renderArticles(filtered);
        }
    </script>
</body>
